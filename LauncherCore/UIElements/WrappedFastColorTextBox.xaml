<UserControl x:Class="Leayal.PSO2Launcher.Core.UIElements.WrappedFastColorTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leayal.PSO2Launcher.Core.UIElements" xmlns:so="clr-namespace:StackOverflow;assembly=StackOverflow.Core" xmlns:crtb="clr-namespace:FastColoredTextBoxNS;assembly=FastColoredTextBox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <so:WindowsFormsHostEx Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <so:WindowsFormsHostEx.Child>
            <crtb:FastColoredTextBox Dock="Fill" KeyDown="Box_ManualConfig_KeyDown" />
        </so:WindowsFormsHostEx.Child>
    </so:WindowsFormsHostEx>
</UserControl>

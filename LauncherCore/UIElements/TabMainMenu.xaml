<mah:MetroTabItem x:Class="Leayal.PSO2Launcher.Core.UIElements.TabMainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Leayal.PSO2Launcher.Core.UIElements"
             mc:Ignorable="d" x:Name="thisSelf"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:SplitButton Grid.Row="0" Content="Start game" Click="ButtonGameStart_Click" IsEnabled="{Binding ElementName=thisSelf,Path=GameStartEnabled,Mode=OneWay}" x:Name="ButtonGameStart">
            <local:SplitButton.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Login and play" Click="MenuItemLoginAndPlay_Click" />
                </ContextMenu>
            </local:SplitButton.ContextMenu>
        </local:SplitButton>
        
        <Button Grid.Row="1" Content="Check for game updates" Click="ButtonCheckForPSO2Update_Click" />
        <Button Grid.Row="2" Content="Manage game data" Click="ButtonManageGameData_Click" />
    </Grid>
</mah:MetroTabItem>

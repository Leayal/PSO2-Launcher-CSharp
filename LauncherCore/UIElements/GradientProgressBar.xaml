<ProgressBar x:Class="Leayal.PSO2Launcher.Core.UIElements.GradientProgressBar"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:Leayal.PSO2Launcher.Core.UIElements"
                      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             d:Value="50" Background="DarkGray"
                      mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800" x:Name="thisSelf">
    <ProgressBar.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <LinearGradientBrush.RelativeTransform>
                <RotateTransform CenterY="0.5" CenterX="0.5" Angle="270"/>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="Green" Offset="1"/>
            <GradientStop Color="DarkGoldenrod" Offset="0.5"/>
            <GradientStop Color="DarkRed" Offset="0"/>
        </LinearGradientBrush>
    </ProgressBar.Foreground>
</ProgressBar>

<ListView x:Class="Leayal.PSO2Launcher.Core.UIElements.TroubleshootingAnswerPresenter"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:local="clr-namespace:Leayal.PSO2Launcher.Core.UIElements"
          mc:Ignorable="d" 
          d:DesignHeight="450" d:DesignWidth="800">
    <ListView.Style>
        <Style TargetType="ListView" BasedOn="{StaticResource MahApps.Styles.ListView.Virtualized}" />
    </ListView.Style>
    <ListView.ItemTemplate>
        <DataTemplate>
            <RadioButton Content="{Binding Title}" ToolTip="{Binding TooltipText}" Tag="{Binding Name}" Checked="RadioButton_Checked" />
        </DataTemplate>
    </ListView.ItemTemplate>
</ListView>

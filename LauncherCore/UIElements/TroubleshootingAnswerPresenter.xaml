<ListBox x:Class="Leayal.PSO2Launcher.Core.UIElements.TroubleshootingAnswerPresenter"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:Leayal.PSO2Launcher.Core.UIElements"
         mc:Ignorable="d" 
         ScrollViewer.CanContentScroll="True"
         VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.ScrollUnit="Pixel" VirtualizingPanel.VirtualizationMode="Recycling"
         d:DesignHeight="450" d:DesignWidth="800">
    <ListBox.Style>
        <Style TargetType="ListBox" BasedOn="{StaticResource MahApps.Styles.ListBox.Virtualized}" />
    </ListBox.Style>
    <ListBox.ItemTemplate>
        <DataTemplate>
            <RadioButton Content="{Binding Title,Mode=OneTime}" ToolTip="{Binding TooltipText,Mode=OneTime}" Tag="{Binding Name,Mode=OneTime}" Checked="RadioButton_Checked" />
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
